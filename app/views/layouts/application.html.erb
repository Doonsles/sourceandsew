<!DOCTYPE html>
<html>
<head>
  <title>SourceAndSew</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if current_user.nil? %>
	<%= button_to "Sign In", new_session_url%>
	
	<% else %>
	<ul>
		<li> Welcome, <%= current_user.username %> </li>
		<li><%= button_to "Sign Out", session_url, :method => :delete %> </li>
		<li> <%= button_to "View Notes", user_notes_url(current_user), :method => :get%></li>
		<li> <%= button_to "View Favorites", user_favorites_url(current_user), :method => :get %> </li>
	</ul>
	<% end %>


<%= yield %>

</body>
</html>
